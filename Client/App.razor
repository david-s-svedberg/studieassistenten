@inject NavigationManager NavigationManager

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            @if (IsPublicPage(routeData))
            {
                @* Public pages (login, etc.) don't need authentication *@
                <RouteView RouteData="@routeData" />
            }
            else
            {
                @* Protected pages require authentication *@
                <AuthorizeView>
                    <Authorized>
                        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                    </Authorized>
                    <NotAuthorized>
                        <RedirectToLogin />
                    </NotAuthorized>
                    <Authorizing>
                        <div style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
                            <div style="text-align: center;">
                                <div class="spinner-border" role="status" style="width: 3rem; height: 3rem;">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p style="margin-top: 16px; color: #666;">Verifying authentication...</p>
                            </div>
                        </div>
                    </Authorizing>
                </AuthorizeView>
            }
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <p role="alert">Sorry, there's nothing at this address.</p>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private bool IsPublicPage(RouteData routeData)
    {
        // Pages that don't require authentication
        var publicPages = new[] { "Login" };
        return publicPages.Contains(routeData.PageType.Name);
    }
}
