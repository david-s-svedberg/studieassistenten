@page "/"
@inject NavigationManager Navigation

<PageTitle>Studieassistenten</PageTitle>

<div class="welcome-container">
    <div class="welcome-content">
        <div class="welcome-icon">
            <i class="bi bi-mortarboard" style="font-size: 4rem; color: #10a37f;"></i>
        </div>
        <h1 class="welcome-title">StudieAssistenten</h1>
        <p class="welcome-subtitle">Your AI-powered study companion</p>
        
        <div class="welcome-actions">
            <button class="btn btn-lg btn-primary px-5" @onclick="CreateNewTest">
                <i class="bi bi-plus-circle"></i> Create New Test
            </button>
        </div>

        <div class="welcome-info mt-5">
            <div class="info-grid">
                <div class="info-item">
                    <i class="bi bi-upload"></i>
                    <span>Upload documents</span>
                </div>
                <div class="info-item">
                    <i class="bi bi-file-text"></i>
                    <span>Auto OCR</span>
                </div>
                <div class="info-item">
                    <i class="bi bi-robot"></i>
                    <span>AI generates content</span>
                </div>
                <div class="info-item">
                    <i class="bi bi-file-pdf"></i>
                    <span>Export to PDF</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .welcome-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        color: #ececf1;
    }

    .welcome-content {
        text-align: center;
        max-width: 600px;
        padding: 2rem;
    }

    .welcome-icon {
        margin-bottom: 1.5rem;
    }

    .welcome-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: #ececf1;
    }

    .welcome-subtitle {
        font-size: 1.25rem;
        color: #8e8ea0;
        margin-bottom: 2rem;
    }

    .welcome-actions {
        margin: 2rem 0;
    }

    .welcome-info {
        padding-top: 2rem;
        border-top: 1px solid #444;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        color: #8e8ea0;
    }

    .info-item i {
        font-size: 1.5rem;
        color: #10a37f;
    }

    .info-item span {
        font-size: 0.875rem;
    }
</style>

@code {
    private void CreateNewTest()
    {
        Navigation.NavigateTo("/upload/new");
    }
}
