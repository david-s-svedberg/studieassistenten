@page "/document/{DocumentId:int}"
@using StudieAssistenten.Client.Services
@using StudieAssistenten.Shared.DTOs
@using StudieAssistenten.Shared.Enums
@inject IDocumentService DocumentService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(document?.FileName ?? "Document")</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-light" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-light">Loading document...</p>
    </div>
}
else if (document == null)
{
    <div class="alert alert-danger">
        <h4>Document not found</h4>
        <p>The requested document could not be found.</p>
        <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/documents")'>
            Back to Documents
        </button>
    </div>
}
else
{
    <div class="document-detail-container">
        <div class="document-header">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="document-title">@document.FileName</h1>
                <button class="btn btn-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
            </div>
            <div class="document-meta">
                <span class="badge @GetStatusBadgeClass(document.Status)">@document.Status</span>
                <span class="text-muted ms-3">@FormatFileSize(document.FileSizeBytes)</span>
                <span class="text-muted ms-3">Uploaded @document.UploadedAt.ToLocalTime().ToString("MMM d, yyyy HH:mm")</span>
            </div>
        </div>

        <div class="document-content-grid">
            @* File Preview Section *@
            @if (IsImageFile(document.FileName))
            {
                <div class="preview-section">
                    <div class="preview-card">
                        <div class="preview-header">
                            <h5>Image Preview</h5>
                        </div>
                        <div class="preview-body">
                            <img src="/uploads/@document.FileName" alt="@document.FileName" class="img-fluid" style="max-height: 500px; object-fit: contain;" />
                        </div>
                    </div>
                </div>
            }
            else if (IsPdfFile(document.FileName))
            {
                <div class="preview-section">
                    <div class="preview-card">
                        <div class="preview-header">
                            <h5>PDF Preview</h5>
                            <a href="/uploads/@document.FileName" target="_blank" class="btn btn-sm btn-outline-light">
                                <i class="bi bi-box-arrow-up-right"></i> Open in New Tab
                            </a>
                        </div>
                        <div class="preview-body">
                            <iframe src="/uploads/@document.FileName" style="width: 100%; height: 600px; border: none;"></iframe>
                        </div>
                    </div>
                </div>
            }

            @* Extracted Text Section *@
            <div class="text-section">
                <div class="text-card">
                    <div class="text-header">
                        <h5>Extracted Text</h5>
                        @if (document.Status == DocumentStatus.Uploaded)
                        {
                            <button class="btn btn-sm btn-primary" @onclick="ProcessDocument" disabled="@isProcessing">
                                @if (isProcessing)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <i class="bi bi-cpu"></i> Extract Text
                            </button>
                        }
                        else if (!string.IsNullOrWhiteSpace(document.ExtractedText) && !isEditing)
                        {
                            <button class="btn btn-sm btn-outline-light" @onclick="StartEditing">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                        }
                    </div>
                    <div class="text-body">
                        @if (string.IsNullOrWhiteSpace(document.ExtractedText))
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bi bi-file-text" style="font-size: 3rem;"></i>
                                <p class="mt-3">No text extracted yet.</p>
                                @if (document.Status == DocumentStatus.Uploaded)
                                {
                                    <p>Click "Extract Text" to process this document.</p>
                                }
                                else if (document.Status == DocumentStatus.OcrInProgress)
                                {
                                    <div class="spinner-border text-primary mt-3" role="status"></div>
                                    <p class="mt-2">Processing...</p>
                                }
                            </div>
                        }
                        else
                        {
                            @if (isEditing)
                            {
                                <textarea class="form-control text-editor" rows="25" @bind="editedText"></textarea>
                                <div class="d-flex gap-2 mt-3">
                                    <button class="btn btn-primary" @onclick="SaveText" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-1"></span>
                                        }
                                        Save Changes
                                    </button>
                                    <button class="btn btn-secondary" @onclick="CancelEditing">Cancel</button>
                                </div>
                            }
                            else
                            {
                                <div class="extracted-text-display">
                                    @document.ExtractedText
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .document-detail-container {
        color: #ececf1;
        max-width: 1400px;
        margin: 0 auto;
    }

    .document-header {
        margin-bottom: 2rem;
    }

    .document-title {
        color: #ececf1;
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0;
    }

    .document-meta {
        margin-top: 0.5rem;
    }

    .document-content-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
        gap: 2rem;
    }

    .preview-section,
    .text-section {
        min-height: 400px;
    }

    .preview-card,
    .text-card {
        background: #444654;
        border: 1px solid #565869;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .preview-header,
    .text-header {
        padding: 1rem;
        background: #343541;
        border-bottom: 1px solid #565869;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .preview-header h5,
    .text-header h5 {
        margin: 0;
        color: #ececf1;
        font-size: 1rem;
    }

    .preview-body,
    .text-body {
        padding: 1rem;
    }

    .preview-body {
        display: flex;
        justify-content: center;
        align-items: center;
        background: #2a2b32;
    }

    .text-editor {
        background: #2a2b32;
        color: #ececf1;
        border: 1px solid #565869;
        font-family: 'Consolas', 'Monaco', monospace;
        font-size: 0.9rem;
        resize: vertical;
    }

    .extracted-text-display {
        background: #2a2b32;
        padding: 1rem;
        border-radius: 0.25rem;
        white-space: pre-wrap;
        font-family: 'Consolas', 'Monaco', monospace;
        font-size: 0.9rem;
        line-height: 1.6;
        color: #ececf1;
        max-height: 600px;
        overflow-y: auto;
    }

    .generation-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .content-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .content-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background: #2a2b32;
        border-radius: 8px;
    }

    .content-info h6 {
        margin: 0 0 0.25rem 0;
    }

    .content-actions {
        display: flex;
        gap: 0.5rem;
    }

    .badge {
        padding: 0.35rem 0.65rem;
        font-size: 0.875rem;
    }

    @@media (max-width: 1024px) {
        .document-content-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    [Parameter]
    public int DocumentId { get; set; }

    private DocumentDto? document;
    private bool isLoading = true;
    private bool isProcessing = false;
    private bool isEditing = false;
    private bool isSaving = false;
    private string editedText = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadDocument();
    }

    private async Task LoadDocument()
    {
        isLoading = true;
        document = await DocumentService.GetDocumentAsync(DocumentId);
        isLoading = false;
    }

    private async Task ProcessDocument()
    {
        if (document == null) return;

        isProcessing = true;
        StateHasChanged();
        
        var success = await DocumentService.TriggerOcrProcessingAsync(DocumentId);
        
        if (success)
        {
            // Poll continuously until processing completes
            var maxAttempts = 60; // 2 minutes max (60 * 2 seconds)
            var attempts = 0;
            
            while (attempts < maxAttempts)
            {
                await Task.Delay(2000);
                await LoadDocument();
                StateHasChanged();
                
                // Check if processing is complete
                if (document.Status != DocumentStatus.OcrInProgress && 
                    document.Status != DocumentStatus.Uploaded)
                {
                    break;
                }
                
                attempts++;
            }
        }
        
        isProcessing = false;
        StateHasChanged();
    }

    private void StartEditing()
    {
        isEditing = true;
        editedText = document?.ExtractedText ?? string.Empty;
    }

    private void CancelEditing()
    {
        isEditing = false;
        editedText = string.Empty;
    }

    private async Task SaveText()
    {
        if (document == null) return;

        isSaving = true;
        var success = await DocumentService.UpdateExtractedTextAsync(DocumentId, editedText);
        
        if (success)
        {
            document.ExtractedText = editedText;
            isEditing = false;
        }
        
        isSaving = false;
    }

    private string GetStatusBadgeClass(DocumentStatus status)
    {
        return status switch
        {
            DocumentStatus.Uploaded => "bg-secondary",
            DocumentStatus.OcrInProgress => "bg-info",
            DocumentStatus.OcrCompleted => "bg-success",
            DocumentStatus.OcrFailed => "bg-danger",
            DocumentStatus.ProcessingInProgress => "bg-warning",
            DocumentStatus.ProcessingCompleted => "bg-success",
            DocumentStatus.ProcessingFailed => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private bool IsImageFile(string fileName)
    {
        var ext = Path.GetExtension(fileName).ToLowerInvariant();
        return ext == ".jpg" || ext == ".jpeg" || ext == ".png" || ext == ".gif" || ext == ".bmp";
    }

    private bool IsPdfFile(string fileName)
    {
        return Path.GetExtension(fileName).ToLowerInvariant() == ".pdf";
    }

    private void GoBack()
    {
        if (document?.TestId.HasValue == true)
        {
            Navigation.NavigateTo($"/test/{document.TestId}");
        }
        else
        {
            Navigation.NavigateTo("/documents");
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}
