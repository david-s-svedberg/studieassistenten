@* ManageSharesDialog.razor *@
@using StudieAssistenten.Shared.DTOs
@using StudieAssistenten.Client.Services
@inject ITestShareService TestShareService
@inject IToastService ToastService

<div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">
                    <i class="bi bi-people me-2"></i>Manage Shares
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="OnClose"></button>
            </div>
            <div class="modal-body">
                @if (isLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading shares...</p>
                    </div>
                }
                else if (!shares.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">This test is not shared with anyone yet.</p>
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var share in shares)
                        {
                            <div class="list-group-item bg-dark text-light border-secondary d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle me-3 text-primary" style="font-size: 2rem;"></i>
                                    <div>
                                        <h6 class="mb-0">@share.SharedWith.Email</h6>
                                        @if (!string.IsNullOrEmpty(share.SharedWith.FullName))
                                        {
                                            <small class="text-muted">@share.SharedWith.FullName</small>
                                        }
                                        <br />
                                        <small class="text-muted">
                                            <i class="bi bi-calendar-event me-1"></i>
                                            Shared @FormatDate(share.SharedAt)
                                        </small>
                                    </div>
                                </div>
                                <button class="btn btn-sm btn-outline-danger"
                                        @onclick="() => RevokeShare(share)"
                                        disabled="@revokingShareIds.Contains(share.Id)">
                                    @if (revokingShareIds.Contains(share.Id))
                                    {
                                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle me-1"></i>
                                        <span>Revoke</span>
                                    }
                                </button>
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" @onclick="OnClose">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int TestId { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback OnShareRevoked { get; set; }

    private List<TestShareDto> shares = new();
    private HashSet<int> revokingShareIds = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadShares();
    }

    private async Task LoadShares()
    {
        isLoading = true;
        shares = await TestShareService.GetSharesForTestAsync(TestId);
        isLoading = false;
    }

    private async Task RevokeShare(TestShareDto share)
    {
        revokingShareIds.Add(share.Id);

        try
        {
            var success = await TestShareService.RevokeShareAsync(share.Id);

            if (success)
            {
                ToastService.ShowSuccess($"Share with {share.SharedWith.Email} revoked");
                shares.Remove(share);
                await OnShareRevoked.InvokeAsync();
            }
            else
            {
                ToastService.ShowError("Failed to revoke share");
            }
        }
        finally
        {
            revokingShareIds.Remove(share.Id);
        }
    }

    private string FormatDate(DateTime date)
    {
        var timeSpan = DateTime.UtcNow - date;

        if (timeSpan.TotalDays < 1)
        {
            if (timeSpan.TotalHours < 1)
            {
                return "just now";
            }
            return $"{(int)timeSpan.TotalHours}h ago";
        }
        else if (timeSpan.TotalDays < 7)
        {
            return $"{(int)timeSpan.TotalDays}d ago";
        }
        else
        {
            return date.ToString("MMM d, yyyy");
        }
    }
}
