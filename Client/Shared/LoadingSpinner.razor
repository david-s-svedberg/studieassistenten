@* Reusable loading spinner component *@

<div class="@ContainerClass">
    <div class="spinner-border @SpinnerClass" role="status" aria-label="Loading">
        <span class="visually-hidden">@LoadingText</span>
    </div>
    @if (ShowText)
    {
        <p class="mt-3 @TextClass">@LoadingText</p>
    }
</div>

@code {
    [Parameter] public string LoadingText { get; set; } = "Loading...";
    [Parameter] public bool ShowText { get; set; } = true;
    [Parameter] public string SpinnerClass { get; set; } = "text-primary";
    [Parameter] public string ContainerClass { get; set; } = "text-center py-5";
    [Parameter] public string TextClass { get; set; } = "";
}
